<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cal1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="276dp" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F2F2"
            android:backgroundTint="#CAB0B0"
            android:gravity="center_horizontal"
            android:text="Grade Calculater"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#FFFFFF"
            android:textSize="44sp"
            android:textStyle="bold"
            android:typeface="serif"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="#36FFFFFF"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Enter your grades "
            android:textAlignment="center"
            android:textColor="#DAC0C0"
            android:textSize="36sp"
            android:textStyle="bold"
            android:typeface="sans" />

        <EditText
            android:id="@+id/quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="40dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:backgroundTintMode="src_over"
            android:breakStrategy="balanced"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:hapticFeedbackEnabled="true"
            android:hint="Quizes 15%"
            android:inputType="number"
            android:padding="3dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/homework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="40dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:backgroundTintMode="src_over"
            android:breakStrategy="balanced"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:hapticFeedbackEnabled="true"
            android:hint="Homework 25%"
            android:inputType="number"
            android:padding="3dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/midterm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="40dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:backgroundTintMode="src_over"
            android:breakStrategy="balanced"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:hapticFeedbackEnabled="true"
            android:hint="midterms 30%"
            android:inputType="number"
            android:padding="3dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/finalexam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="40dp"
            android:background="@android:drawable/button_onoff_indicator_off"
            android:backgroundTintMode="src_over"
            android:breakStrategy="balanced"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:hapticFeedbackEnabled="true"
            android:hint="final 30%"
            android:inputType="number"
            android:padding="3dp"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <Button
            android:id="@+id/calculate"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="120dp"
            android:backgroundTint="#CAB0B0"
            android:gravity="center_horizontal"
            android:text="Calculate"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:rippleColor="#FFFFFF" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:background="#33FFFFFF"
            android:breakStrategy="high_quality"
            android:gravity="center_horizontal"
            android:hint="result"
            android:padding="10dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="45dp"
            android:backgroundTint="#00FFFFFF"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:icon="@android:drawable/ic_menu_rotate"
            app:iconGravity="end|textEnd"
            app:iconPadding="10dp"
            app:iconSize="70dp"
            app:iconTint="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>